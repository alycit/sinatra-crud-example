<h3>Edit Game</h3>

<% if @errors %>
<%= erb :"_errors", locals: {errors: @errors} %>
<% end %>

<form method="POST" action="/games/<%= @game.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-field">
    <input type="text" name="game[name]" value="<%= @game.name %>">
  </div>
  <div class="form-field">
    <textarea rows="15" cols="75" name="game[description]"><%= @game.description %></textarea>
  </div>
  <input type="submit">
</form>